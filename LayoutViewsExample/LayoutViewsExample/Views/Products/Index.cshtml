@model  IEnumerable<LayoutViewsExample.Models.Product>
@{
    ViewBag.Title = "Products";
}


<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @product.ProductId
                </td>
                <td>
                    @product.ProductName
                </td>
                <td>
                    @product.Price
                </td>
            </tr>
        }
    </tbody>
</table>

