@using System;
@{
    ViewBag.Title = "Products";
}


<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in ViewBag.Products)
        {
            Type type = product.GetType();
            <tr>
                <td>
                    @((int)type.GetProperty("ProductId").GetValue(product, null))
                </td>
                <td>
                    @((string)type.GetProperty("ProductName").GetValue(product, null))
                </td>
                <td>
                    @((int)type.GetProperty("Price").GetValue(product, null))
                </td>
            </tr>
        }
    </tbody>
</table>

