@model MyFirstApplication.ViewModels.StudentViewModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StudentDetails</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
        <a class="navbar-brand" href="#">Company</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/home/index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home/products">Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/home/contact">Contact</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/account/login">Login</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid">
        <table class="table">
            <tbody>
                <tr>
                    <th>#</th>
                    @* Razor Expression *@
                    <td>@Model.StudentId</td>
                </tr>
                <tr>
                    <th>Student Name</th>
                    @* Razor Expression *@
                    <td>@Model.StudentName</td>
                </tr>
                <tr>
                    <th>Mark</th>
                    @* Razor Expression *@
                    <td>@Model.Mark</td>
                </tr>
                <tr>
                    <th>Result</th>
                    @* Razor Block *@
                    @{
                        if (Model.Mark >= 40)
                        {
                            <td>Pass</td>
                        }
                        else
                        {
                            <td>Fail</td>
                        }
                    }
                </tr>
                <tr>
                    <th>Semesters</th>
                    @* Razor For *@
                    <td>
                        <ul class="list-unstyled">
                            @for (int i = 1; i <= Model.NumberOfSemesters; i++)
                            {
                                <li>Semester @i</li>
                            }
                        </ul>
                    </td>
                </tr>
                <tr>
                    <th>Subjects</th>
                    @* Razor ForEach *@
                    <td>
                        <ul class="list-unstyled">
                            @foreach (var subject in Model.Subjects)
                            {
                                <li>@subject</li>
                            }
                        </ul>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        @* Razor If *@
                        @if (Model.Mark >= 40)
                        {
                            <span class="text-success">Congratulations</span>
                        }
                        else
                        {
                            <span class="text-danger">Better luck next time!</span>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <script src="~/Scripts/jquery-3.6.3.min.js"></script>
    <script src="~/Scripts/umd/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

