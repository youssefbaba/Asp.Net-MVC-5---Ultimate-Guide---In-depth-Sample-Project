                    }
                </a>
            }
            else
            {
                <a href="@Url.Action("Index", "Products" , new { @criteria = "Category" , @order = "asc" })" class="text-decoration-none">
                    <span>Category</span>
                    @if (ViewBag.criteria == "Category")
                    {
                        <i class="fa-solid fa-caret-up"></i>
                    }
                </a>
            }
        </th>
        <th>
            @if (ViewBag.order == "asc")
            {
                <a href="@Url.Action("Index", "Products" , new {@criteria = "Brand" , @order = "desc" })" class="text-decoration-none">
                    <span>Brand</span>
                    @if (ViewBag.criteria == "Brand")
                    {
