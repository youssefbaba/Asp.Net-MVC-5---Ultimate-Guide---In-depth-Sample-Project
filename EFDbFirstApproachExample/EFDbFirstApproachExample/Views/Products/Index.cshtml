@model List<EFDbFirstApproachExample.Models.Product>
@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>
<div class="row">
    <div class="col-8">
        <a href="@Url.Action("Create", "Products")" class="btn btn-primary"><i class="fa-solid fa-plus fa-sm mr-1"></i><span>New Product</span></a>
    </div>
    <form action="@Url.Action("Index" , "Products")" method="get" class="col-4">
        <div class="input-group">
            <input type="search" class="form-control" placeholder="Search" name="keyWord" value="@ViewBag.keyWord">
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </div>
        </div>
    </form>
</div>
<table class="table">
    <tr>
        <th>#</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Date Of Purchase</th>
        <th>Availability Status</th>
        <th>Category Id</th>
        <th>Brand Id</th>
        <th>Active</th>
        <th>Action</th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ProductID</td>
            <td>@product.ProductName</td>
            <td>@string.Format("{0:C}", product.Price)</td>
            <td>@string.Format("{0:dd/MM/yyyy}", product.DateOfPurchase)</td>
            <td>@product.AvailabilityStatus</td>
            <td>@product.CategoryID</td>
            <td>@product.BrandID</td>
            <td>@product.Active</td>
            <td>
                <a href="@Url.Action("Details", "Products", new { @productId = product.ProductID })" class="btn btn-success"><i class="fa-solid fa-eye fa-sm mr-1"></i><span>View</span></a>
                <a href="@Url.Action("Edit", "Products", new { @productId = product.ProductID })" class="btn btn-primary"><i class="fa-solid fa-pen-to-square fa-sm mr-1"></i><span>Edit</span></a>
            </td>
        </tr>
    }
</table>
