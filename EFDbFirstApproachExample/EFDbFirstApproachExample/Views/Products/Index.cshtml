                    }
                </a>
            }
        </th>
        <th>
            @if (ViewBag.order == "asc")
            {
                <a href="@Url.Action("Index", "Products" , new {@criteria = "Category" , @order = "desc" })" class="text-decoration-none">
                    <span>Category</span>
                    @if (ViewBag.criteria == "Category")
                    {
